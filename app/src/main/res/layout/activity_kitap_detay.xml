<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ozcaan11.l50.sqlkitapbilgileri.KitapDetay">

    <EditText
        android:id="@+id/dtAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/atextView"
        android:layout_marginTop="20dp"
        android:hint="Kitabın adı" />

    <EditText
        android:id="@+id/dtYazar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dtAd"
        android:layout_marginTop="10dp"
        android:hint="Kitabın yazarı" />

    <EditText
        android:id="@+id/dtSayfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dtYazar"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Sayfa sayısı"
        android:inputType="number" />

    <EditText
        android:id="@+id/dtFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dtSayfa"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/dtSayfa"
        android:ems="10"
        android:hint="Fiyat"
        android:inputType="number" />

    <TextView
        android:id="@+id/atextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Kitap bilgilerini düzenleyin"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dtSayfa"
        android:layout_marginTop="15dp"
        android:text="Düzenle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDuzenle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="veya"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnDuzenle"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:background="#d21212"
        android:text="Kitabı sil"
        android:textColor="#ffffff" />

</RelativeLayout>
